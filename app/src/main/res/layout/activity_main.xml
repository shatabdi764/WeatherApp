<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

tools:context=".MainActivity"
    android:elevation="1dp"
    android:background="@mipmap/weatherforecast">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:id="@+id/cityNameEditText"
        android:hint="Enter City" />

    <Button
        android:text="Get It"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityNameEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:id="@+id/getItButton"
        android:onClick="fetchWeather" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultTextView"
        android:text=""
        android:layout_centerInParent="false"
        android:layout_below="@id/getItButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        tools:text="hey there"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="120dp" />

    <TextView
        android:text="Enter City's Name ðŸ‘‡ to get its Weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />
</RelativeLayout>
